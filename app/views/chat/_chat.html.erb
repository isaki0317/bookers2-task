  <% if messages.present? %>
    <% messages.each do |message| %>
      <strong class="content"><%= message.content %></strong>
      <small>by <strong><a href="/users/<%= message.user_id %>"><%= message.user.email %>さん</a></strong></small>
      <hr>
    <% end %>
  <% else %>
    <h3 class="text-center">メッセージはまだありません</h3>
  <% end %>