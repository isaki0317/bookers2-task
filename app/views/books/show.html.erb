
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/form', book: @book_new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path(@book) %></td>
					<td><%= @book.body %></td>
					  <% if @book.user == current_user %>
						<td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					  <% end %>
					<td>
					  <ul>
					  <% if @book.favorited_by?(current_user) %>
					  	<li>
					  	  <%= link_to book_favorite_path(@book.id), method: :delete, local:true do %>
					  	    <i class="fa fa-heart" aria-hidden="true" style="color: gray;"></i>
					  	    <%= @book.favorites.count %>
					  	  <% end %>
					  	</li>
					  <% else %>
						<li>
						  <%= link_to book_favorite_path(@book.id), method: :post, local:true do %>
						  	<i class="fa fa-heart-o" area-hidden="true"></i>
						  	<%= @book.favorites.count %>
						  <% end %>
						</li>
					  <% end %>
					  </ul>
					</td>
					<td>
				      <p>コメント数：<%= @book.book_comments.count %></p>
					</td>
				</tr>
		</table>
		<% @book.book_comments.each do |book_comment|	%>
		<table>
		  <tr>
		    <td>
			    <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image-mini.jpg" %><br>
			    <%= book_comment.user.name %>
		    </td>
		    <td>
			    <%= book_comment.comment %>
			</td>
			<td>
			    <% if book_comment.user == current_user %>
			      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn-sm btn btn-danger" %>
			    <% end %>
			</td>
		  </tr>
		</table>
		<% end %>
		
		
		<% if @comment.errors.any? %>
    		<div id="error_explanation">
      			<h3><%= @comment.errors.count %>error prohibited this obj from being saved:</h3>
      		  <ul>
        		<% @comment.errors.full_messages.each do |message| %>
        		  <li><%= message %></li>
        		<% end %>
      		  </ul>
    		</div>
        <% end %>
		
		<div>
		　<%= form_with(model:[@book, @comment], local:true) do |f| %>
		  <%= f.text_area :comment, class: "form-control" %>
		  <%= f.submit "送信", class:"btn pull-right" %>
		  <% end %>
		</div>

	</div>
</div>

