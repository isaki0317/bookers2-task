<div class="container">
  <div class="col-xs-12">
    <h1>Follow Users</h1>
    
    <% if @users.empty? %>
      <p>ユーザーはいません</p>
    <% else %>
      <table class="table table-hover table-inverse">
        <thead>
          <th class="title">image</th>
          <th class="title">name</th>
          <th class="title"></th>
          <th class="title"></th>
          <th class="title"></th>
        </thead>
        
        <% @users.each do |user| %>
          <tbody>
            <th>
              <%= attachment_image_tag user, :profile_image, :fill, 40, 40, class: "attachment user profile_image fallback img-circle avatar", fallback: "no-image-mini.jpg", size:'40x40'%>
            </th>
            <th><%= user.name %></th>
            <th>フォロー数：<%= user.followings.count %></th>
            <th>フォロワー数：<%= user.followers.count %></th>
            <th><%= link_to "Show", user_path(user) %></th>
          </tbody>
        <% end %>
      </table>
    <% end %>
  </div>
</div>